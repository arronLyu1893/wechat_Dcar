<!-- 轮播图 -->
<view class="slider">
  <swiper autoplay interval="2000" indicator-dots>
    <block  wx:for="{{pics}}" wx:key="item.id">
      <swiper-item>
        <image src="{{item.img_url}}" mode="aspectFill" lazy-load />
      </swiper-item>
    </block>
  </swiper>            
</view>

